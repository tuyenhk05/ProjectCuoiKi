@page
@model RazorPagesMovie.Application.Pages.Accout.IndexModel

@{
    ViewData["Title"] = "Index";
}

<a href="/Index" class="btn-back-home">
    <i class="fa fa-home"></i>
</a>
<style>
    .btn-back-home {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        background-color: #4CAF50; /* Màu nền cho nút */
        color: white; /* Màu chữ */
        text-decoration: none; /* Bỏ gạch chân */
        border-radius: 5px; /* Bo góc nút */
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu */
        margin:20px;
    }

        .btn-back-home:hover {
            background-color: #45a049; /* Màu nền khi hover */
        }

        .btn-back-home i {
            margin-right: 8px; /* Khoảng cách giữa icon và text */
            font-size: 18px;
        }

</style>
<h1>Giỏ Hàng</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KoiFish[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.KoiFish) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FishId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FishId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FishId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
